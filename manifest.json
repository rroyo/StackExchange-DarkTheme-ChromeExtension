{
  "manifest_version": 3,
  "name": "Stack Exchange Dark Theme",
  "version": "0.0.3",
  "description": "Adds the 'dark-theme' class to Stack Exchange websites. It may not perfectly suit some of the websites.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": [
        "*://*.mathoverflow.net/*",
        "*://*.stackapps.com/*",
        "*://*.askubuntu.com/*",
        "*://*.superuser.com/*",
        "*://*.stackoverflow.com/*",
        "*://*.stackexchange.com/*",
        "*://*.serverfault.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
